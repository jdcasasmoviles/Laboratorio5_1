<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdcasas.lab_5_1act1.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:orientation="horizontal"
        android:layout_weight="1.94">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="red"
            android:id="@+id/textView1"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="#d30909"
            android:textSize="14dp"
            android:textColor="#080505" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="yellow"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="#faf327"
            android:textSize="14dp"
            android:textColor="#080505" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="blue"
            android:id="@+id/textView3"
            android:textAlignment="center"

            android:layout_weight="1"
            android:background="#0a37ce"
            android:textSize="14dp"
            android:textColor="#080505" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="green"
            android:textAlignment="center"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:background="#29b909"
            android:textSize="14dp"
            android:textColor="#080505" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical"
        android:background="#909090"
        android:layout_weight="0.46">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="row one"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:textSize="12dp"
            android:background="#909090" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="row two"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:textSize="12dp"
            android:background="#909090" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="row three"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="12dp"
            android:background="#909090" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="row four"
            android:id="@+id/textView8"
            android:layout_weight="1"
            android:textSize="12dp"
            android:background="#909090" />
    </LinearLayout>

</LinearLayout>
